<!DOCTYPE html>
<html>

<head>
  <title>
    <% if (data && Array.isArray(data) && data.length > 0) { %>
      Resultado de la búsqueda
    <% } else { %>
      Obra Social de la Provincia de San Juan
    <% } %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <style>
    h1 {
      font-family: "Times New Roman", serif;
      color: white;
    }

    .black-background {
      background-color: rgb(239, 132, 8);
      color: white;
    }
  </style>
  <div class="black-background">
    <% if (data && Array.isArray(data) && data.length > 0) { %>
      <section title="Resultado de la búsqueda">
        <h1 class="display-5 fw-bold text-body-emphasis">Resultados</h1>
        <ul>
          <% data.forEach(pedido => { %>
            <li>
              <p>Fecha de Pedido: <%= pedido.DOCDUEDATE_ORDV %></p>
              <p>Remito: <%= pedido.U_REMITO %></p>
              <p>Farmacia: <%= pedido.U_NOMBRE_FD %></p>
              <p>Estado: <%= pedido.ESTADO %></p>
              <p>Descripción: <%= pedido.Dscription %></p>
            </li>
          <% }); %>
        </ul>
      </section>
    <% } else { %>
      <section title="Obra social de la provincia de San Juan">
        <div class="px-4 py-5 my-5 text-center">
          <img class="d-block mx-auto mb-4" src="./Obra social san juan.jpg" alt="img san juan" width="600" height="150">
          <h1 class="display-5 fw-bold text-body-emphasis">Obra Social de la Provincia de San Juan</h1>
          <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">Ingrese su Numero de Afiliado para ubicar su medicamento</p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
              <form id="consultaForm" method="post" action="/">
                <label for="U_Nroafiliado">N° DNI</label>
                <input type="text" id="U_Nroafiliado" name="U_Nroafiliado" required>
                <button type="submit" id="ingresarBtn">INGRESAR</button>
              </form>
            </div>
          </div>
        </div>
      </section>
    <% } %>
  </div>
</body>

</html>
